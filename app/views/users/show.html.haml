.container
  .row
    %h2 mypage
    .col-lg-8.col-md-8.col-sm-9.col-xs-12
    - @posts.each do |post|
      %article
        .row
          .col-sm-6.col-md-4
            %figure
              %img{:src => post.user.image.url}/
          .col-sm-6.col-md-8
            %span.label.label-default.pull-right
            %h3= link_to(post.title, "/posts/#{post.id}")
            %section
              = post.user.nickname do
                %i.glyphicon.glyphicon-user
              = post.created_at do
                %i.glyphicon.glyphicon-eye-open
  = paginate(@posts)